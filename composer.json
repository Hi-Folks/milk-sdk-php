{
    "name": "hi-folks/milk-sdk-php",
    "description": "Milk SDK PHP is a (fluent) open-source PHP library that makes it easy to integrate your PHP application with location services",
    "keywords": [
        "geolocation",
        "location",
        "sdk",
        "php-sdk",
        "xyz-spaces",
        "hi-folks",
        "milk-sdk-php"
    ],
    "homepage": "https://github.com/hi-folks/milk-sdk-php",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Roberto Butti",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.3|^7.0",
        "jmikola/geojson": "^1.0",
        "vlucas/phpdotenv": "^3.3|^4.0|^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5.15|^8.4|^9.0",
        "phpstan/phpstan": "^0.12.50"
    },
    "autoload": {
        "psr-4": {
            "HiFolks\\Milk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HiFolks\\Milk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyze",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
